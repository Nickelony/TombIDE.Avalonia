<Window
	x:Class="TombIDE.Windows.SettingsWindow"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:settings="using:TombIDE.Controls.Settings"
	xmlns:ui="using:FluentAvalonia.UI.Controls"
	Title="SettingsWindow"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">

	<settings:SettingsPage Header="Settings">
		<settings:SettingsSection
			MaxWidth="500"
			HorizontalAlignment="Left"
			Header="Language">
			<ComboBox
				Grid.Column="1"
				HorizontalAlignment="Stretch"
				SelectedIndex="{Binding SelectedLanguageIndex}">
				<TextBlock Text="English" />
				<TextBlock Text="Polski" />
			</ComboBox>
		</settings:SettingsSection>
		<settings:SettingsSection
			MaxWidth="500"
			HorizontalAlignment="Left"
			Header="Theme">
			<ComboBox
				Grid.Column="1"
				HorizontalAlignment="Stretch"
				SelectedIndex="{Binding SelectedLanguageIndex}">
				<TextBlock Text="Use system default" />
				<TextBlock Text="Light" />
				<TextBlock Text="Dark" />
			</ComboBox>
		</settings:SettingsSection>
	</settings:SettingsPage>
</Window>
