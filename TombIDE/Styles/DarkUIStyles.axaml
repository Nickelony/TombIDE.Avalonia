<Styles
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sys="clr-namespace:System;assembly=netstandard">

	<Design.PreviewWith>
		<Border Padding="20">
			<Grid ColumnDefinitions="*,*,*">
				<StackPanel Grid.Column="0" Spacing="5">
					<Button Content="Button" />
					<TextBox Text="TextBox" />
					<ComboBox PlaceholderText="ComboBox" />
					<CheckBox Content="CheckBox" IsChecked="True" />
					<RadioButton Content="RadioButton" />
					<RadioButton Content="RadioButtonChecked" IsChecked="True" />
					<ToggleSwitch IsChecked="True" />
				</StackPanel>

				<StackPanel
					Grid.Column="1"
					Margin="20,0,0,0"
					IsEnabled="False"
					Spacing="5">
					<Button Content="Button" />
					<TextBox Text="TextBox" />
					<ComboBox PlaceholderText="ComboBox" />
					<CheckBox Content="CheckBox" IsChecked="True" />
					<RadioButton Content="RadioButton" />
					<RadioButton Content="RadioButtonChecked" IsChecked="True" />
					<ToggleSwitch IsChecked="True" />
				</StackPanel>

				<StackPanel
					Grid.Column="2"
					Margin="20,0,0,0"
					Spacing="5">
					<Button Content="Button" />
					<TextBox Text="TextBox">
						<DataValidationErrors.Error>
							<sys:Exception />
						</DataValidationErrors.Error>
					</TextBox>
					<ComboBox HorizontalAlignment="Stretch" PlaceholderText="ComboBox">
						<DataValidationErrors.Error>
							<sys:Exception />
						</DataValidationErrors.Error>
					</ComboBox>
					<CheckBox Content="CheckBox" IsEnabled="False" />
					<RadioButton Content="RadioButton" />
					<RadioButton Content="RadioButtonChecked" IsChecked="True" />
					<ToggleSwitch />
				</StackPanel>
			</Grid>
		</Border>
	</Design.PreviewWith>

	<Style x:Class="DarkUIColorScheme">
		<Style.Resources>
			<SolidColorBrush x:Key="GreyBackground">#3C3F41</SolidColorBrush>
			<SolidColorBrush x:Key="HeaderBackground">#393C3E</SolidColorBrush>
			<SolidColorBrush x:Key="BlueBackground">#424D5F</SolidColorBrush>
			<SolidColorBrush x:Key="DarkBlueBackground">#343942</SolidColorBrush>
			<SolidColorBrush x:Key="DarkBackground">#2B2B2B</SolidColorBrush>
			<SolidColorBrush x:Key="MediumBackground">#313335</SolidColorBrush>
			<SolidColorBrush x:Key="LightBackground">#45494A</SolidColorBrush>
			<SolidColorBrush x:Key="LighterBackground">#5F6566</SolidColorBrush>
			<SolidColorBrush x:Key="LightestBackground">#B2B2B2</SolidColorBrush>
			<SolidColorBrush x:Key="LightBorder">#515151</SolidColorBrush>
			<SolidColorBrush x:Key="DarkBorder">#333333</SolidColorBrush>
			<SolidColorBrush x:Key="LightText">#DCDCDC</SolidColorBrush>
			<SolidColorBrush x:Key="DisabledText">#999999</SolidColorBrush>
			<SolidColorBrush x:Key="BlueHighlight">#6897BB</SolidColorBrush>
			<SolidColorBrush x:Key="BlueSelection">#4B6EAF</SolidColorBrush>
			<SolidColorBrush x:Key="GreyHighlight">#7A8084</SolidColorBrush>
			<SolidColorBrush x:Key="GreySelection">#5C5C5C</SolidColorBrush>
			<SolidColorBrush x:Key="DarkGreySelection">#525252</SolidColorBrush>
			<SolidColorBrush x:Key="DarkBlueBorder">#333D4E</SolidColorBrush>
			<SolidColorBrush x:Key="LightBlueBorder">#566172</SolidColorBrush>
			<SolidColorBrush x:Key="ActiveControl">#9FB2C4</SolidColorBrush>
		</Style.Resources>
	</Style>

	<!--  Window & Text  -->
	<Style Selector="Window">
		<Setter Property="Background" Value="{StaticResource GreyBackground}" />
	</Style>

	<Style Selector="TextBlock">
		<Setter Property="Foreground" Value="{StaticResource LightText}" />
	</Style>

	<!--  Button  -->
	<Style Selector="Button">
		<Setter Property="Background" Value="{StaticResource LightBackground}" />
		<Setter Property="BorderBrush" Value="{StaticResource GreySelection}" />
		<Setter Property="BorderThickness" Value="1" />
	</Style>

	<Style Selector="Button:focus /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="BorderBrush" Value="{StaticResource BlueHighlight}" />
	</Style>

	<Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{StaticResource LighterBackground}" />
	</Style>

	<Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{StaticResource DarkBackground}" />
		<Setter Property="BorderBrush" Value="{StaticResource BlueHighlight}" />
	</Style>

	<Style Selector="Button:disabled">
		<Setter Property="Foreground" Value="{StaticResource DisabledText}" />
	</Style>

	<Style Selector="Button:disabled /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{StaticResource DarkGreySelection}" />
	</Style>

	<!--  ToggleButton  -->
	<!--<Style Selector="ToggleButton">
		<Setter Property="Background" Value="{StaticResource TextBoxDefaultBackground}" />
		<Setter Property="BorderBrush" Value="{StaticResource DefaultBorder}" />
		<Setter Property="BorderThickness" Value="1" />
	</Style>

	<Style Selector="ToggleButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="BorderBrush" Value="{StaticResource DefaultBorder}" />
	</Style>

	<Style Selector="ToggleButton:pressed /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="BorderBrush" Value="{StaticResource DefaultBorder}" />
	</Style>

	<Style Selector="ToggleButton:checked /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{StaticResource DefaultBlue}" />
	</Style>

	<!-|-  TextBox  -->
	<Style Selector="TextBox">
		<Setter Property="Background" Value="{StaticResource LightBackground}" />
		<Setter Property="Foreground" Value="{StaticResource LightText}" />
		<Setter Property="BorderBrush" Value="{StaticResource GreySelection}" />
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="Padding" Value="2" />
	</Style>

	<Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
		<Setter Property="Background" Value="{StaticResource LightBackground}" />
	</Style>

	<Style Selector="TextBox:disabled">
		<Setter Property="Foreground" Value="{StaticResource DisabledText}" />
	</Style>

	<Style Selector="TextBox:disabled /template/ Border#PART_BorderElement">
		<Setter Property="Background" Value="{StaticResource DarkGreySelection}" />
	</Style>

	<!--  ComboBox  -->
	<!--<Style Selector="ComboBox">
		<Setter Property="Background" Value="{StaticResource TextBoxDefaultBackground}" />
		<Setter Property="Foreground" Value="{StaticResource DefaultForeground}" />
		<Setter Property="BorderBrush" Value="{StaticResource DefaultBorder}" />
	</Style>

	<Style Selector="ComboBox:disabled">
		<Setter Property="Foreground" Value="{StaticResource DefaultForeground}" />
	</Style>

	<Style Selector="ComboBox:pointerover /template/ Border#Background">
		<Setter Property="Background" Value="{DynamicResource ButtonBackgroundPointerOver}" />
		<Setter Property="BorderBrush" Value="{StaticResource DefaultBorder}" />
	</Style>

	<Style Selector="ComboBox:pressed /template/ Border#Background">
		<Setter Property="Background" Value="{StaticResource DarkerBackground}" />
		<Setter Property="BorderBrush" Value="{StaticResource DefaultBorder}" />
	</Style>

	<Style Selector="ComboBox:error /template/ Border#Background">
		<Setter Property="BorderBrush" Value="{StaticResource DefaultError}" />
	</Style>

	<Style Selector="ComboBox:error DataValidationErrors /template/ Panel ContentControl">
		<Setter Property="Margin" Value="0 0 24 0" />
	</Style>

	<Style Selector="ComboBox /template/ Popup#PART_Popup ScrollViewer">
		<Setter Property="Background" Value="{StaticResource DarkerBackground}" />
		<Setter Property="Foreground" Value="{StaticResource DefaultForeground}" />
	</Style>

	<!-|-  CheckBox  -->
	<!--<Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
		<Setter Property="BorderBrush" Value="{StaticResource DefaultBlue}" />
		<Setter Property="Background" Value="{StaticResource DefaultBlue}" />
	</Style>

	<Style Selector="CheckBox:disabled">
		<Setter Property="TextBlock.Opacity" Value="0.5" />
	</Style>

	<Style Selector="CheckBox:checked:disabled /template/ Border#NormalRectangle">
		<Setter Property="BorderBrush" Value="{DynamicResource CheckBoxCheckBackgroundStrokeCheckedDisabled}" />
		<Setter Property="Background" Value="{DynamicResource CheckBoxCheckBackgroundFillCheckedDisabled}" />
	</Style>

	<!-|-  RadioButton  -->
	<!--<Style Selector="RadioButton:checked /template/ Ellipse#CheckOuterEllipse">
		<Setter Property="Stroke" Value="{StaticResource DefaultBlue}" />
		<Setter Property="Fill" Value="{StaticResource DefaultBlue}" />
	</Style>

	<Style Selector="RadioButton:disabled">
		<Setter Property="TextBlock.Opacity" Value="0.5" />
	</Style>

	<Style Selector="RadioButton:disabled /template/ Ellipse#CheckOuterEllipse">
		<Setter Property="Stroke" Value="{DynamicResource RadioButtonOuterEllipseCheckedStrokeDisabled}" />
		<Setter Property="Fill" Value="{DynamicResource RadioButtonOuterEllipseCheckedFillDisabled}" />
	</Style>

